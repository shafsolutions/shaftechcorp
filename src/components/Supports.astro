<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  window.addEventListener("load", () => {
    const supports = document.querySelector(".supports-section");
    if (supports) {
      const tl = gsap.timeline({
        scrollTrigger: {
          trigger: ".supports-section",
          start: "top 80%",
          toggleActions: "play none none reverse",
        },
      });

      tl.from(".supports-section h3", {
        opacity: 0,
        y: 30,
        duration: 0.8,
        ease: "power3.out",
      }).from(
        ".supports-section .marquee",
        {
          opacity: 0,
          y: 40,
          duration: 1,
          ease: "power3.out",
        },
        "-=0.3"
      );
    }
  });

</script>