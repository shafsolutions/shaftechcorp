<section class="cta-section h-fit px-6 md:px-12 py-16 bg-linear-to-b from-slate-950 to-slate-950 overflow-hidden">
  <div class="max-w-6xl mx-auto flex flex-col items-center gap-8">
    <h1 class="text-4xl md:text-5xl font-semibold text-gradient leading-tight text-center">
      It's Time to <span class="shiny-text">Step Up</span> to <br class="hidden md:block">the Next Digital Level
    </h1>
    <div class="cta-btn flex justify-center">
        <a href="mailto:shafsolutionscorp@email.com" class="btn-cta text-white hover:text-black flex items-center gap-3">
            Let's Talk
            <i class="ph ph-arrow-right"></i>
        </a>
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  window.addEventListener("load", () => {
    const cta = document.querySelector(".cta-section");
    if (cta) {
      gsap.from(".cta-section h1", {
        scrollTrigger: {
          trigger: ".cta-section",
          start: "top 60%",
        },
        opacity: 0,
        scale: 0.9,
        duration: 1,
        ease: "power3.out",
      });

      gsap.from(".cta-section .cta-btn", {
        scrollTrigger: {
          trigger: ".cta-section",
          start: "top 50%",
        },
        opacity: 0,
        y: 30,
        duration: 1,
        delay: 0.2,
        ease: "power3.out",
      });
    }
  });

</script>