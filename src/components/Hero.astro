---
import "../animations/hero-anim.js";
---

<section class="hero-section relative flex flex-col items-center justify-center text-center min-h-[90vh] px-6 md:px-12 bg-gradient-to-b from-slate-950 to-slate-900 overflow-hidden">

  <div class="bg-glow"></div>

  <div class="max-w-6xl flex flex-col gap-8">
    <h1 class="hero-text text-4xl md:text-7xl font-semibold text-gradient leading-tight">
      Driving your Business Forward <br>Through <span class="shiny-text">Smart</span> Digital <br><span class="shiny-text">Solutions</span>
    </h1>
    <div class="hero-cta flex justify-center">
        <a href="" class="btn-cta text-white hover:text-black flex items-center gap-3">
            Explore Our Innovations
            <i class="ph ph-arrow-right"></i>
        </a>
    </div>
  </div>
</section>

<script type="module" src="../animations/hero-anim.js"></script>
<script>
  import gsap from "gsap";

  window.addEventListener("load", () => {
    const tl = gsap.timeline({ defaults: { ease: "power3.out" } });

    tl.from(".hero-text", {
      opacity: 0,
      y: 50,
      duration: 0.8,
      stagger: 0.2
    })
    .from(".hero-cta", {
      opacity: 0,
      y: 50,
      duration: 1,
      ease: "power3.out"
    }, "-=0.2");
  });
</script>
