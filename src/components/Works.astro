---
const cases = [
  {
    label: "Web App",
    title: "Gerakan Pemuda Natuna",
    img: "/assets/img/prj-gpnatuna.webp",
  },
  {
    label: "Dashboard",
    title: "Dashboard Event Organizer",
    img: "/assets/img/prj-evention.webp",
  },
  {
    label: "Website",
    title: "Marketing Agency",
    img: "/assets/img/prj-marketing-agency.webp",
  },
  {
    label: "Website",
    title: "Data Archive Website",
    img: "/assets/img/prj-archive-website.webp",
  },
];
---

<section id="works" class="works-section bg-gradient-to-b from-slate-900 to-slate-950 text-white py-20 px-6 md:px-12 lg:px-20">
  <div class="max-w-6xl mx-auto flex flex-col gap-12">
    <h3 class="text-lg md:text-3xl font-semibold text-gradient">
      Our Cases
    </h3>
  
    <div class="grid md:grid-cols-2 gap-16">
      {cases.map((item) => (
        <div class="card relative">
          <div class="group overflow-hidden rounded-2xl bg-slate-800/30 border border-slate-700 backdrop-blur-sm">
            <div class="transition-transform duration-500 ease-[cubic-bezier(0.4,0,0.2,1)] group-hover:scale-[1.05] group-hover:rotate-[1deg]" >
              <img
                src={item.img}
                alt={item.title}
                class="w-full h-[200px] md:h-[350px] rounded-2xl object-cover"
              />
              <div
                class="absolute inset-0 bg-gradient-to-t from-slate-950/70 via-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
              ></div>
            </div>
          </div>
          <div class="absolute bottom-[-32px] left-8 bg-slate-900/80 backdrop-blur-sm rounded-lg px-8 py-4 text-sm text-gray-200">
            <p class="text-sky-400 italic">{item.label}</p>
            <p class="font-semibold text-white">{item.title}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  window.addEventListener("load", () => {
    const works = document.querySelector(".works-section");
    if (works) {
      gsap.from(".works-section h3", {
        scrollTrigger: {
          trigger: ".works-section",
          start: "top 60%",
        },
        opacity: 0,
        y: 40,
        duration: 1,
        ease: "power3.out",
      });

      gsap.from(".works-section .grid > div", {
        scrollTrigger: {
          trigger: ".works-section",
          start: "top 50%",
        },
        opacity: 0,
        y: 60,
        duration: 1.5,
        stagger: 0.2,
        ease: "power3.out",
      });
    }
  });

</script>